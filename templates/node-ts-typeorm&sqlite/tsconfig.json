{
    "compilerOptions": {
        "noImplicitAny": false,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "es6",
        "types": [
            "reflect-metadata",
            "jest"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": false
    },
    "include": [
        "src/**/*"
    ]
}